{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Resource list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subject</th>
                <th>Sports</th>
                <th>Companytype</th>
                <th>Country</th>
                <th>Province</th>
                <th>City</th>
                <th>Description</th>
                <th>Updatetime</th>
                <th>Reporttime</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('resource_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.subject }}</td>
                <td>{{ entity.sports }}</td>
                <td>{{ entity.companyType }}</td>
                <td>{{ entity.country }}</td>
                <td>{{ entity.province }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.updateTime %}{{ entity.updateTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.reportTime %}{{ entity.reportTime|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.department }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('resource_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('resource_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('resource_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
